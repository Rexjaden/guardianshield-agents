# Environment variables for SHIELD Token Apigee Microgateway
# Copy this to .env and configure with your values

# Apigee Organization Settings
APIGEE_ORG=shieldtoken-org
APIGEE_ENV=production
APIGEE_KEY=your_apigee_key_here
APIGEE_SECRET=your_apigee_secret_here

# API Gateway Configuration
APIGEE_RUNTIME_URL=https://api.enterprise.apigee.com
APIGEE_MGMT_URL=https://api.enterprise.apigee.com
APIGEE_VIRTUAL_HOST=default,secure

# SSL Configuration for HTTPS
APIGEE_SSL_CERT_PATH=/opt/apigee/ssl/cert.pem
APIGEE_SSL_KEY_PATH=/opt/apigee/ssl/key.pem

# Web3 and Blockchain Settings
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your_key_here
ETHEREUM_NETWORK=mainnet
TOKEN_CONTRACT_ADDRESSES={"GUARD":"0x...","SHIELD":"0x..."}

# Rate Limiting and Security
DEFAULT_QUOTA_LIMIT=1000
DEFAULT_QUOTA_INTERVAL=1
DEFAULT_QUOTA_TIMEUNIT=minute
SPIKE_ARREST_RATE=30ps

# Caching Configuration
CACHE_TTL_SECONDS=300
CACHE_REDIS_HOST=redis
CACHE_REDIS_PORT=6379

# Analytics and Monitoring
ANALYTICS_ENABLED=true
ANALYTICS_BUFFER_SIZE=1000
ANALYTICS_BATCH_SIZE=500
ANALYTICS_FLUSH_INTERVAL=5000

# Token Configuration
GUARD_TOKEN_MINIMUM_USD=0.005
SHIELD_TOKEN_MINIMUM_USD=0.025
GUARD_TOKEN_MAXIMUM_USD=10000
SHIELD_TOKEN_MAXIMUM_USD=50000

# Supported Payment Methods
SUPPORTED_WALLETS=metamask,walletconnect,coinbase,trust
WALLET_SIGNATURE_TIMEOUT=300000

# Development Settings
DEBUG_MODE=false
LOG_LEVEL=INFO
MOCK_BLOCKCHAIN=false

# External Service URLs
PRICE_ORACLE_URL=https://api.coingecko.com/api/v3
EXCHANGE_RATE_API=https://api.exchangerate-api.com/v4/latest/USD

# Security Headers
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Wallet-Address,X-Wallet-Signature

# Session Management
SESSION_TIMEOUT=3600
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h

# Database Configuration (if needed)
DATABASE_URL=postgresql://user:pass@localhost:5432/shieldtoken
REDIS_URL=redis://redis:6379

# Notification Settings
WEBHOOK_URL=https://your-webhook-endpoint.com/apigee
EMAIL_NOTIFICATIONS=admin@shieldtoken.com

# Load Balancing
BACKEND_HEALTH_CHECK_INTERVAL=30
BACKEND_TIMEOUT=5000
MAX_CONNECTIONS=1000