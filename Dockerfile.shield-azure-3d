# SHIELD Token Azure 3D Graphics Service
# Multi-stage build for optimized production container

FROM nvidia/cuda:11.8-devel-ubuntu22.04 AS builder

# Install build dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-dev \
    build-essential \
    cmake \
    git \
    curl \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install Azure CLI
RUN curl -sL https://aka.ms/InstallAzureCLIDeb | bash

# Set up Python environment
WORKDIR /app
COPY requirements.txt .
RUN pip3 install --no-cache-dir -r requirements.txt

# Copy source code
COPY . .

# Build 3D graphics components
RUN python3 setup.py build_ext --inplace

# Production stage
FROM nvidia/cuda:11.8-runtime-ubuntu22.04

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libxrender1 \
    libxext6 \
    libsm6 \
    libice6 \
    libfontconfig1 \
    libxss1 \
    libasound2 \
    && rm -rf /var/lib/apt/lists/*

# Install Azure CLI
RUN curl -sL https://aka.ms/InstallAzureCLIDeb | bash

# Create app user
RUN useradd -m -u 1000 shielduser

# Set up working directory
WORKDIR /app
COPY --from=builder /app .
COPY --chown=shielduser:shielduser . .

# Create necessary directories
RUN mkdir -p /app/assets /app/logs /app/cache && \
    chown -R shielduser:shielduser /app

# Switch to non-root user
USER shielduser

# Expose ports
EXPOSE 8080 9090

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Environment variables
ENV PYTHONPATH=/app
ENV CUDA_VISIBLE_DEVICES=all
ENV NVIDIA_VISIBLE_DEVICES=all

# Start the SHIELD Azure 3D service
CMD ["python3", "shield_azure_3d_service.py"]