# GuardianShield Agents Configuration Template
# Copy this to .env and configure your settings
# NEVER commit .env to version control - keep your secrets safe!

# === Core Agent Configuration ===
GUARDIAN_AGENT_ID=guardian_shield_agent_001
LOG_LEVEL=INFO
ENCRYPTION_PASSWORD=your_secure_encryption_password_here

# === DMER Registry Configuration ===
DMER_REGISTRY_URL=https://api.guardianshield.network/dmer
DMER_API_KEY=your_dmer_api_key_here
DMER_CACHE_TIMEOUT=3600
DMER_RATE_LIMIT=1.0
DMER_BATCH_SIZE=10
DMER_RECENT_LIMIT=100

# === Flare Network Configuration ===
FLARE_RPC_URL=https://flare-api.flare.network/ext/bc/C/rpc
FLARE_API_URL=https://api.flare.network
FLARE_API_KEY=your_flare_api_key_here
FLARE_PRIVATE_KEY=your_flare_private_key_here
THREAT_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# === Web3 Configuration ===
WEB3_RPC_URL=https://rpc.ankr.com/flare
WEB3_PRIVATE_KEY=your_encrypted_private_key_here
GAS_PRICE_GWEI=20
GAS_LIMIT=200000

# === Threat Intelligence Sources ===
# AbuseIPDB
ABUSEIPDB_API_KEY=your_abuseipdb_key_here
ABUSEIPDB_BASE_URL=https://api.abuseipdb.com/api/v2

# VirusTotal
VIRUSTOTAL_API_KEY=your_virustotal_key_here
VIRUSTOTAL_BASE_URL=https://www.virustotal.com/vtapi/v2

# URLVoid
URLVOID_API_KEY=your_urlvoid_api_key_here
URLVOID_BASE_URL=https://api.urlvoid.com/v1

# PhishTank
PHISHTANK_API_KEY=your_phishtank_api_key_here
PHISHTANK_BASE_URL=https://checkurl.phishtank.com/checkurl

# IBM X-Force
IBM_XFORCE_API_KEY=your_ibm_xforce_api_key_here
IBM_XFORCE_PASSWORD=your_ibm_xforce_password_here
IBM_XFORCE_BASE_URL=https://api.xforce.ibmcloud.com

# Bitcoin Abuse Database
BITCOINABUSE_API_KEY=your_bitcoinabuse_key_here

# Custom Threat Intel Source
CUSTOM_THREAT_API_URL=https://your-custom-api.com
CUSTOM_THREAT_API_KEY=your_custom_api_key_here

# === Recursive Improvement & Evolution Settings ===
EVOLUTION_ENABLED=true
RECURSIVE_IMPROVEMENT_ENABLED=true
EVOLUTION_BACKUP_DIR=agents/evolution_backups
MAX_EVOLUTION_DEPTH=5

# Learning Parameters
LEARNING_RATE=0.01
IMPROVEMENT_THRESHOLD=0.8
EVOLUTION_TRIGGER_THRESHOLD=0.7

# Genetic Algorithm Settings
GENETIC_MUTATION_RATE=0.1
GENETIC_POPULATION_SIZE=50

# Behavioral Analytics
BEHAVIORAL_ANOMALY_THRESHOLD=2.5
BEHAVIORAL_MAX_LOG_SIZE=10000
BEHAVIOR_LOG_MAX_SIZE=10000

# Decision Making
DECISION_LOG_MAX_SIZE=50000

# === Learning & Storage Configuration ===
LEARNING_DATABASE_URL=sqlite:///guardian_learning.db
# For PostgreSQL: postgresql://user:password@localhost/guardianshield
# For MySQL: mysql://user:password@localhost/guardianshield

# === Security Settings ===
RATE_LIMIT_DELAY=1.0
MAX_FILE_SIZE_MB=10
MAX_FILENAME_LENGTH=255
CACHE_TIMEOUT_SECONDS=300
AUDIT_LOG_ENABLED=true
SECURITY_SCAN_INTERVAL=3600  # 1 hour in seconds

# === API Server Configuration ===
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your_super_secret_api_key_here
API_RATE_LIMIT=100

# === Email Notifications ===
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
NOTIFICATION_EMAIL=your_email@domain.com
NOTIFICATION_PASSWORD=your_app_password_here
ALERT_EMAIL_TO=alerts@guardianshield.network

# === Monitoring and Metrics ===
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60

# === Development Settings ===
DEBUG_MODE=false
TEST_MODE=false
MOCK_EXTERNAL_APIS=false