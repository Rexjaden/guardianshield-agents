{
  "observer_id": "guardian_observer_us_east",
  "region": "us-east",
  "zone": "virginia-1a",
  "blockchain": {
    "rpc_url": "http://validator-us-east:26657",
    "websocket_url": "ws://validator-us-east:26657/websocket",
    "network_id": "guardian-mainnet",
    "start_block": 0,
    "block_confirmation_depth": 12
  },
  "database": {
    "host": "observer-postgres",
    "port": 5432,
    "database": "guardian_analytics",
    "username": "observer",
    "max_connections": 25,
    "query_timeout": 60
  },
  "redis": {
    "host": "observer-redis",
    "port": 6379,
    "db": 0,
    "max_connections": 20
  },
  "elasticsearch": {
    "hosts": ["http://observer-elasticsearch:9200"],
    "max_retries": 3,
    "timeout": 30
  },
  "indexing": {
    "batch_size": 500,
    "worker_count": 6,
    "max_retries": 3,
    "retry_delay": 5,
    "enable_transaction_indexing": true,
    "enable_state_indexing": true,
    "enable_event_indexing": true,
    "enable_trace_indexing": false,
    "parallel_processing": true
  },
  "analytics": {
    "enable_real_time": true,
    "aggregation_intervals": [300, 1800, 3600, 86400],
    "cache_duration": 600,
    "enable_predictive_analytics": true,
    "threat_detection_enabled": true
  },
  "storage": {
    "engine": "rocksdb",
    "compression": "snappy",
    "cache_size_mb": 8192,
    "max_open_files": 10000,
    "bloom_filter_bits": 10
  },
  "api": {
    "bind_address": "0.0.0.0",
    "port": 8080,
    "max_concurrent_requests": 1000,
    "request_timeout": 30,
    "rate_limiting": {
      "requests_per_minute": 10000,
      "burst_size": 500
    }
  },
  "monitoring": {
    "prometheus_port": 9090,
    "health_check_interval": 30,
    "metrics_retention": "30d",
    "log_level": "info"
  },
  "performance": {
    "max_block_cache": 50000,
    "max_transaction_cache": 200000,
    "gc_target_percentage": 80,
    "memory_limit_gb": 14
  }
}