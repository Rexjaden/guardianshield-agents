# Production Environment Variables
# Copy this to .env.production and fill in the actual values

# Domain Configuration
DOMAIN=www.guardian-shield.io
ETH_DOMAIN=guardianshield-eth.com
ENVIRONMENT=production

# Security
SECRET_KEY=your-ultra-secure-secret-key-here-64-chars-minimum-change-this
MASTER_ADMIN_PASSWORD=your-master-admin-password-here-change-this
JWT_SECRET=your-jwt-secret-key-here-change-this

# Database Configuration
DB_PASSWORD=your-secure-database-password-here-change-this
DATABASE_URL=postgresql://guardianuser:${DB_PASSWORD}@db:5432/guardianshield

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here-change-this
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Email Configuration
EMAIL_SERVER=smtp.guardian-shield.io
EMAIL_PORT=587
EMAIL_USER=system@guardian-shield.io
EMAIL_PASSWORD=your-email-password-here-change-this
CLAUDE_EMAIL=claude@guardian-shield.io
ADMIN_EMAIL=admin@guardian-shield.io
SECURITY_EMAIL=security@guardian-shield.io

# SSL Configuration
SSL_CERT_PATH=/app/ssl/live/www.guardian-shield.io/fullchain.pem
SSL_KEY_PATH=/app/ssl/live/www.guardian-shield.io/privkey.pem

# AI Training Configuration
TRAINING_ENABLED=true
CONTINUOUS_LEARNING=true
AUTO_EVOLVE=true
TRAINING_BATCH_SIZE=50
LEARNING_RATE=0.001

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking
MONITORING_ENABLED=true

# Performance
MAX_WORKERS=4
WORKER_TIMEOUT=300
MAX_CONNECTIONS=100

# Security Headers
CORS_ORIGINS=https://www.guardian-shield.io,https://guardian-shield.io,https://guardianshield-eth.com,https://www.guardianshield-eth.com
ALLOWED_HOSTS=www.guardian-shield.io,guardian-shield.io,guardianshield-eth.com,www.guardianshield-eth.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups

# Claude AI Configuration
CLAUDE_NOTIFICATIONS=true
CLAUDE_REPORTS=true
CLAUDE_ALERTS=true